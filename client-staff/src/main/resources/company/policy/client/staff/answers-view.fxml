<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="800.0" spacing="12.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="connectionStatusLabel" alignment="CENTER" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="30.0" style="-fx-font-weight: bold; -fx-border-color: gray;" text="%label.connection.status" />
      <VBox>
         <children>
            <Label style="-fx-font-weight: bold;" text="%label.staff.name" />
            <TextField fx:id="nameTextField" />
         </children>
         <padding>
            <Insets bottom="24.0" />
         </padding>
      </VBox>
      <VBox>
         <children>
            <VBox>
               <children>
                  <Label style="-fx-font-weight: bold;" text="%label.topic" />
                  <TextField fx:id="topicTextField" editable="false" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label style="-fx-font-weight: bold;" text="%label.question" />
                  <TextField fx:id="questionTextField" editable="false" />
               </children>
               <padding>
                  <Insets bottom="24.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
      <VBox>
         <children>
            <VBox>
               <children>
                  <Label style="-fx-font-weight: bold;" text="%label.option1" />
                  <TextField fx:id="option1TextField" editable="false" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label style="-fx-font-weight: bold;" text="%label.option2" />
                  <TextField fx:id="option2TextField" editable="false" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label style="-fx-font-weight: bold;" text="%label.option3" />
                  <TextField fx:id="option3TextField" editable="false" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label style="-fx-font-weight: bold;" text="%label.option4" />
                  <TextField fx:id="option4TextField" editable="false" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label style="-fx-font-weight: bold;" text="%label.option5" />
                  <TextField fx:id="option5TextField" editable="false" />
               </children>
            </VBox>
         </children>
      </VBox>
      <VBox>
         <children>
            <Label style="-fx-font-weight: bold;" text="%label.answer" />
            <HBox spacing="12.0">
               <children>
                  <TextField fx:id="answerTextField" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="100.0" />
                  <Button fx:id="submitButton" defaultButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="%button.submit" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets top="12.0" />
         </padding>
      </VBox>
   </children>
   <padding>
      <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
   </padding>
</VBox>
